{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Mocha Tests",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["--colors", "--forbid-only", "\"test/**/*.test.ts\""]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test File",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["--colors", "--forbid-only", "${relativeFile}"]
    }
  ]
}
